<div class="container">
  <h1>New Game</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
      <span class="letter-blue"><%= letter.upcase %></span>
    <% end %>
  </div>
  <div class="form">
    <form action="/score" method="post">
      <label for="word">What is the longest word you can find ?</label>
      <input type="text" name="word" value="<%= params[:word] %>">
      <input type="submit" value="Play">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
